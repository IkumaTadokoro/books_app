<p id="notice"><%= notice %></p>

<h1><%= t '.index' %></h1>

<table>
  <thead>
    <tr>
      <th><%= t 'dictionary.title' %></th>
      <th><%= t 'dictionary.memo' %></th>
      <th><%= t 'dictionary.author' %></th>
      <th><%= t 'dictionary.picture' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('dictionary.show'), book %></td>
        <td><%= link_to t('.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('.destroy'), book, method: :delete, data: { confirm: t('message.delete.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= paginate @books %>

<br>

<%= link_to t('.new'), new_book_path %>
